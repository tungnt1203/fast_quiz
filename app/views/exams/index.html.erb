<div class="min-h-screen bg-slate-50">
  <% if @exam.present? && @questions.any? %>
    <% exam_title = @exam["title"] %>
    <% exam_time = @exam["time"] %>
    <% total_questions = @exam["totalQuestions"] %>
    <% number_pass = @exam["numberPass"] %>

    <div
      class="flex flex-col lg:flex-row lg:h-screen"
      data-controller="exam"
      data-exam-total-value="<%= total_questions %>"
      data-exam-current-value="0"
    >
      <%# Sidebar: danh sách câu hỏi 1..N %>
      <aside class="lg:w-64 xl:w-72 lg:flex-shrink-0 lg:border-r lg:border-slate-200 lg:overflow-y-auto bg-white">
        <div class="p-3">
          <p class="text-xs font-medium uppercase tracking-wider text-slate-500 px-1 mb-2">Danh sách câu hỏi</p>
          <div class="grid grid-cols-5 sm:grid-cols-5 gap-1.5">
            <% @questions.each_with_index do |_q, index| %>
              <button
                type="button"
                class="exam-sidebar-btn w-9 h-9 rounded-lg text-sm font-medium transition-all focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1 hover:opacity-90 <%= index == 0 ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-700 hover:bg-slate-200' %>"
                data-exam-target="questionItem"
                data-question-index="<%= index %>"
                data-action="click->exam#goTo"
                title="<%= index == 0 ? 'Đang xem' : 'Chưa làm' %>"
              >
                <%= index + 1 %>
              </button>
            <% end %>
          </div>
          <div class="mt-3 pt-3 border-t border-slate-200 space-y-1.5 text-xs text-slate-500">
            <p class="flex items-center gap-2">
              <span class="w-5 h-5 rounded bg-slate-100 border border-slate-200 shrink-0"></span>
              Chưa làm
            </p>
            <p class="flex items-center gap-2">
              <span class="w-5 h-5 rounded bg-indigo-100 border-2 border-indigo-400 shrink-0"></span>
              Đã chọn đáp án
            </p>
            <p class="flex items-center gap-2">
              <span class="w-5 h-5 rounded bg-indigo-600 shrink-0"></span>
              Đang xem
            </p>
          </div>
        </div>
      </aside>

      <%# Main: title + chi tiết câu hỏi + Next/Prev %>
      <main class="flex-1 flex flex-col min-h-0 lg:overflow-y-auto">
        <header class="flex-shrink-0 p-4 sm:p-6 lg:p-8 pb-0">
          <h1 class="text-xl font-semibold text-slate-900 sm:text-2xl"><%= exam_title %></h1>
          <div class="mt-2 flex flex-wrap gap-2 text-sm text-slate-600">
            <span class="inline-flex items-center rounded-full bg-indigo-50 px-2.5 py-0.5 font-medium text-indigo-700"><%= total_questions %> câu</span>
            <span class="inline-flex items-center rounded-full bg-amber-50 px-2.5 py-0.5 font-medium text-amber-700"><%= number_pass %> đúng để đạt</span>
            <% if exam_time.present? && exam_time > 0 %>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 font-medium text-slate-700"><%= (exam_time / 60).to_i %> phút</span>
            <% end %>
          </div>
        </header>
        <%= form_with url: exams_path, method: :post, local: true, data: { turbo: false, action: "change->exam#markAnswered" }, class: "flex flex-col flex-1" do |f| %>
          <div class="flex-1 p-4 sm:p-6 lg:p-8">
            <% @questions.each_with_index do |question, index| %>
              <% q_id = question["id"] %>
              <% q_type = question["type"] %>
              <% choices = question["choices"] || [] %>
              <% is_multi = q_type == "multi_choice" %>
              <section
                class="rounded-xl bg-white shadow-sm ring-1 ring-slate-200 overflow-hidden <%= index == 0 ? '' : 'hidden' %>"
                data-exam-target="questionPanel"
                data-question-index="<%= index %>"
              >
                <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                  <span class="text-xs font-medium uppercase tracking-wider text-indigo-600">Câu <%= index + 1 %> / <%= total_questions %></span>
                  <% if is_multi %>
                    <span class="ml-2 text-xs text-slate-500">(Chọn nhiều đáp án)</span>
                  <% end %>
                </div>
                <div class="p-6">
                  <div class="prose prose-slate max-w-none text-slate-700 mb-6">
                    <%= simple_exam_markdown(question["question"]) %>
                  </div>
                  <fieldset class="space-y-2">
                    <legend class="sr-only">Chọn đáp án</legend>
                    <% choices.each do |choice| %>
                      <% c_id = choice["id"] %>
                      <% label_text = choice["label"] %>
                      <label class="flex items-start gap-3 p-3 rounded-lg border border-slate-200 hover:border-indigo-300 hover:bg-indigo-50/50 cursor-pointer transition-colors has-[:checked]:border-indigo-500 has-[:checked]:bg-indigo-50 has-[:checked]:ring-1 has-[:checked]:ring-indigo-500">
                        <% if is_multi %>
                          <%= f.check_box nil, { name: "answers[#{q_id}][]", value: c_id, id: "q_#{q_id}_c_#{c_id}", class: "mt-1 h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" }, c_id, nil %>
                        <% else %>
                          <%= f.radio_button nil, c_id, { name: "answers[#{q_id}]", id: "q_#{q_id}_c_#{c_id}", class: "mt-1 h-4 w-4 border-slate-300 text-indigo-600 focus:ring-indigo-500" } %>
                        <% end %>
                        <span class="flex-1 text-sm font-medium text-slate-800 select-none"><%= simple_exam_markdown(label_text) %></span>
                      </label>
                    <% end %>
                  </fieldset>
                </div>
              </section>
            <% end %>
          </div>

          <div class="flex items-center justify-between gap-4 p-4 sm:p-6 lg:p-8 border-t border-slate-200 bg-white">
            <button
              type="button"
              class="rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
              data-action="click->exam#prev"
            >
              ← Câu trước
            </button>
            <button
              type="button"
              class="rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
              data-action="click->exam#next"
            >
              Câu sau →
            </button>
            <button
              type="submit"
              class="rounded-lg bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
            >
              Nộp bài
            </button>
          </div>
        <% end %>
      </main>
    </div>
  <% else %>
    <div class="max-w-2xl mx-auto px-4 py-12">
      <div class="rounded-xl bg-white shadow-sm ring-1 ring-slate-200 p-12 text-center">
        <p class="text-slate-600">Chưa có đề thi hoặc không thể tải dữ liệu.</p>
        <p class="mt-2 text-sm text-slate-500">Kiểm tra kết nối API hoặc cookies Viblo.</p>
      </div>
    </div>
  <% end %>
</div>
